---------------------------- _team.scss  -------------------------------
#team{
    padding-top: $padding120;
      
      .card{
        &:hover{
          .card-body{
          width: 100%;
          }
        }
      }
    
      .card-body{
      background-color: $colorPrimary;
      height: 520px;
      width: 75%;
      transition: 0.3s;
      }

      ul.social{
        text-align: right; 
        list-style: none;
        margin-bottom: 250px; //gap between ul and text
        padding-right: 20px;
      }
      
      li{
        margin-bottom: 15px; //Gap between icons
        display: block; //display icon by line
      }
      a{
        color: $colorBlack;
        font-size: 22px;
        &:hover{
          color: $lightBg;
        }
      }

      .card-title{
        margin-bottom: 2px;
      }
      .card-text{
        font-weight: $fontMd;
        font-size: 14px;
        margin: 0;
      }
}
