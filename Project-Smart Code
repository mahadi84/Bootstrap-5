---------------------------- _footer.scss  -------------------------------
#footer{
    background: #262626;
    color: $colorWhite;
    text-decoration: none;
    position: relative;

    //email, phone & address
    i{ margin-right: 10px;}
 
    // Column-title ex: our blog, Newsletter
    h5{
        font-size: 20px;
        margin-bottom: 25px;
    }
   
    // Our blog
    ul{
        a{            
            text-decoration: none;
            color: $lightBg;
            &:hover{
                color: $colorPrimary;
            }
        }

        span{
            font-size: 12px;
            display: block;
        }
    }

    //Newsletter Form
        input{
            border-radius: 0;
            border: 0;
            background-color: #5e5e5e;
        }

        input[type="submit"]{
            border-radius: 0;
            border: 0;
            padding: 17px;
            width: 100%;
            transition: 0.5s;
            background-color: $colorSecondary;
            &:hover{
                color: $colorWhite;
                background-color: $colorPrimary;
            }
        }
        
    // Copyright
        p.copyright{
            font-size: 14px;
            color: $colorSecondary;
        }

    // Top button
    p.top-up{
        position: absolute;
        bottom: 10px;
        right: 10px;
        margin: 0;
       
        a{
            font-size: 30px;
            color: $colorSecondary;
            &:hover{
               color: $colorPrimary;
            }

        }
    }
}








